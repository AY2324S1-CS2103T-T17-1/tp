@startuml
!include style.puml
skinparam ArrowFontStyle plain

box Logic LOGIC_COLOR_T1
participant ":LogicManager" as LogicManager LOGIC_COLOR
participant ":TaskWiseParser" as TaskWiseParser LOGIC_COLOR
participant ":ViewCommandParser" as ViewCommandParser LOGIC_COLOR
participant "u:ViewCommand" as ViewCommand LOGIC_COLOR
end box

box Model MODEL_COLOR_T1
participant ":Model" as Model MODEL_COLOR
participant ":MainWindow" as MainWindow MODEL_COLOR
end box
[-> LogicManager : execute()
activate LogicManager

LogicManager -> TaskWiseParser : parseCommand()
activate TaskWiseParser

create ViewCommandParser
TaskWiseParser -> ViewCommandParser : parse()
activate ViewCommandParser

create ViewCommand
ViewCommandParser -> ViewCommand : ViewCommand()
activate ViewCommand

ViewCommand -> ViewCommandParser : ViewCommand
deactivate ViewCommand

ViewCommandParser --> TaskWiseParser :ViewCommand
deactivate ViewCommandParser

TaskWiseParser --> LogicManager : u
deactivate TaskWiseParser

LogicManager -> ViewCommand : execute()
activate ViewCommand

ViewCommand -> Model : getFilteredTaskList()
activate Model

Model --> ViewCommand
deactivate Model

ViewCommand -> MainWindow : setTaskToTaskListPanel()
activate MainWindow

MainWindow --> ViewCommand
deactivate MainWindow

ViewCommand --> LogicManager : result
deactivate ViewCommand

ViewCommand -[hidden]-> LogicManager : result
destroy ViewCommand

[<--LogicManager
deactivate LogicManager
@enduml
